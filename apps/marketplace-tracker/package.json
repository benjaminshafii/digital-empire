{
  "name": "@digital-empire/marketplace-tracker",
  "version": "0.1.0",
  "description": "Facebook Marketplace deal finder - built on opencode-job-runner",
  "type": "module",
  "bin": {
    "mkt": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "serve": "bun run src/server.ts",
    "build": "bun build src/cli.ts --compile --outfile dist/mkt",
    "typecheck": "bun x tsc --noEmit"
  },
  "dependencies": {
    "opencode-job-runner": "workspace:*",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.0"
  }
}
