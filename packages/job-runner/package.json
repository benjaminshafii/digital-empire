{
  "name": "opencode-job-runner",
  "version": "0.1.0",
  "description": "CLI and SDK for running and scheduling OpenCode agent jobs",
  "type": "module",
  "bin": {
    "ocr": "./src/cli/index.ts"
  },
  "exports": {
    ".": {
      "import": "./src/core/index.ts",
      "types": "./src/core/index.ts"
    },
    "./cli": {
      "import": "./src/cli/index.ts",
      "types": "./src/cli/index.ts"
    },
    "./web": {
      "import": "./src/web/index.ts",
      "types": "./src/web/index.ts"
    }
  },
  "scripts": {
    "build": "bun build src/cli/index.ts --compile --outfile dist/ocr",
    "dev": "bun run src/cli/index.ts",
    "serve": "bun run src/web/index.ts"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
